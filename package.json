{
  "name": "polyglot-keeper",
  "version": "1.3.0",
  "description": "AI-powered i18n synchronization tool that automatically translates missing keys and maintains perfect structural consistency across all locale files.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "polyglot-keeper": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "dev": "tsx src/index.ts",
    "sync": "node ./dist/index.js",
    "prepublishOnly": "npm run build",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "prepare": "husky"
  },
  "keywords": [
    "i18n",
    "translation",
    "internationalization",
    "localization",
    "l10n",
    "ai",
    "gemini",
    "openai",
    "gpt",
    "sync",
    "cli",
    "json",
    "anthropic",
    "locales",
    "multilingual"
  ],
  "author": "David Aganov <davidaganov21@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/davidaganov/polyglot-keeper.git"
  },
  "homepage": "https://www.npmjs.com/package/polyglot-keeper",
  "bugs": {
    "url": "https://github.com/davidaganov/polyglot-keeper/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "dotenv": "^17.2.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^25.2.2",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vitest": "^4.0.18"
  }
}
